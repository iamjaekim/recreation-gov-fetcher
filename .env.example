# Copy this file to .env and fill in your values.
# .env is gitignored — never commit it.

# Comma-separated campground IDs to watch in parallel
# Find IDs in the recreation.gov URL: /camping/campgrounds/{ID}
CAMPGROUND_IDS=

# ── Dates to watch ────────────────────────────────────────────────────────────
# Comma-separated months (YYYY-MM)
MONTHS=

# Comma-separated dates the consecutive run must START on (YYYY-MM-DD)
# Leave blank to match any start date
START_DATES=

# ── Availability requirements ─────────────────────────────────────────────────
MIN_NIGHTS=

# ── Polling ───────────────────────────────────────────────────────────────────
# Minutes between polls — decimals OK (e.g. 0.5 = every 30s)
INTERVAL=

# ── Telegram notifications ────────────────────────────────────────────────────
# Bot token from @BotFather on Telegram
TELEGRAM_TOKEN=

# Your personal chat ID — get it by messaging your bot then calling:
# curl "https://api.telegram.org/bot<TOKEN>/getUpdates"
TELEGRAM_CHAT_ID=
